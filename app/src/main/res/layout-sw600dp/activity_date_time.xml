<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/duration_1h"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="25dp"
                android:text="Last 1 h"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:onClick="onCheckboxClicked"/>
            <CheckBox
                android:id="@+id/duration_2h"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="25dp"
                android:text="Last 2 h"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:onClick="onCheckboxClicked"/>
            <CheckBox
                android:id="@+id/duration_6h"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="25dp"
                android:text="Last 6 h"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:onClick="onCheckboxClicked"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/duration_12h"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="25dp"
                android:text="Last 12 h"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:onClick="onCheckboxClicked"/>
            <CheckBox
                android:id="@+id/duration_24h"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="25dp"
                android:text="Last 24 h"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:onClick="onCheckboxClicked"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/duration_today"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="25dp"
                android:text="Today"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:onClick="onCheckboxClicked"/>
            <CheckBox
                android:id="@+id/duration_yesterday"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="25dp"
                android:text="Yesterday"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:onClick="onCheckboxClicked"/>


        </LinearLayout>
    </LinearLayout>
    <CheckBox
        android:id="@+id/duration_custom"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:layout_margin="25dp"
        android:textColor="#bf0615"
        android:buttonTint="#bf0615"
        android:text="Custom"
        android:onClick="onCheckboxClicked"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:padding="16dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/custom_duration_image_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="450dp"
                android:layout_height="450dp"
                android:layout_margin="25dp"
                android:src="@drawable/img_calender"/>
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/cancel_date_seletion"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_background"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"/>


</LinearLayout>
