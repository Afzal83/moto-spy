<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:paddingTop="10dp"
    android:visibility="visible">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/vehicle_id_in_trackinginfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a Vehicle"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/location_image"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_below="@id/vehicle_id_in_trackinginfo"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_gps_position"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/vehicle_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vehicle_id_in_trackinginfo"
            android:layout_toEndOf="@id/location_image"
            android:layout_alignBottom="@id/location_image"
            android:text="Mirpur-2,Dhaka"
            android:textSize="12dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/vehicle_id_in_trackinginfo"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/location_image"
            android:text="Speed"
            android:gravity="center_horizontal|bottom"
            android:textSize="10dp"
            android:textColor="@color/white"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">
        <LinearLayout
            android:id="@+id/ll_speed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="start">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Engine"
                android:textSize="10dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/engine_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="ON"
                android:textSize="15dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <View
            android:id="@+id/div01"
            android:layout_width="0.2px"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/ll_speed"
            android:background="@color/white"/>
        <LinearLayout
            android:id="@+id/ll_engine"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/div01"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AC"
                android:textSize="10dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/ac_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off"
                android:textSize="15dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_ac"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:gravity="center_horizontal|bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal|bottom">
                <TextView
                    android:id="@+id/speed_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/speed_status"
                    android:layout_alignBaseline="@id/speed_status"
                    android:layout_marginLeft="5dp"
                    android:text="km/h"
                    android:textSize="10dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>


